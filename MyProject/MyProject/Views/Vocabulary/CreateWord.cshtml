@model MyProject.Models.Word

<form asp-controller="Language" asp-action="CreateWord" method="post">
    <div>
        <input type="hidden" asp-for="LanguageId" />
    </div>
    <div class="form-group">
        <label asp-for="Original">Слово</label>
        <input type="text" asp-for="Original" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Translations[0].Term">Перевод</label>
        <input type="text" asp-for="Translations[0].Term" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

