@model IEnumerable<MyProject.Models.Collection>

@{
    ViewBag.Title = "Повторение";
}

<div class="card">
    <ul class="list-group list-group-flush">
        @foreach (var collection in Model)
        {
            <li class="list-group-item  list-group-item-action">
                <a asp-action="ReviewCollection" asp-route-id="@collection.Id">@collection.Name</a>
            </li>
        }
    </ul>
</div>
