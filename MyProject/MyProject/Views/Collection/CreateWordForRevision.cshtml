@model MyProject.ViewModels.CreateWordForRevisionViewModel

<form asp-controller="Collection" asp-action="CreateWordForRevision" method="post">
    <div>
        <input type="hidden" asp-for="DictionaryId" />
        <input type="hidden" asp-for="CollectionId" />
    </div>
    <div class="form-group">
        <label asp-for="Original">Слово</label>
        <input type="text" asp-for="Original" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Translation">Перевод</label>
        <input type="text" asp-for="Translation" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>