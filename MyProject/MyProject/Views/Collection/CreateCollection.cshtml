@model MyProject.ViewModels.CreateCollectionViewModel

    <form asp-controller="Collection" asp-action="CreateCollection" method="post">
        <div class="form-group">
            <label asp-for="CollectionName">Имя коллекции</label>
            <input type="text" asp-for="CollectionName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="VocabularyId" class="control-label">Словарь</label>
            <select asp-for="VocabularyId" class="form-control">
                <option selected="selected">Выберите категорию</option>
                @foreach (var vocabulary in Model.Vocabularies)
                {
                    <option value="@vocabulary.Id">@vocabulary.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
    </form>